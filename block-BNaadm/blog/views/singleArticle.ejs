      <form
        action="/articles/<%= article.id%>/comments"
        method="POST"
        class="comment"
      >
        <textarea
          name="content"
          id=""
          cols="15"
          rows="5"
          placeholder="add comment"
        ></textarea>
        <button>add</button>
      </form>

      <div id="comment">
        <% comment.forEach((elm)=>{ %>

        <h2><%= elm.content%></h2>
        <p>Likes: <%= elm.likes%></p>
        <div class="like-comment">
          <a href="/comments/<%= elm.id%>/like">
            <button class="btn btn-like">like</button>
          </a>
          <a href="/comments/<%= elm.id%>/dislike">
            <button class="btn btn-dislike">dislike</button>
          </a>
        </div>
        <a href="/comments/<%= elm.id%>/edit">
          <button class="btn">edit</button>
        </a>
        <a href="/comments/<%= elm.id%>/delete">
          <button class="btn">Delete</button>
        </a>
        <% }) %>
      </div>
    </ul>
